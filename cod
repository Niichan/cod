#     3. This notice may not be removed or altered from any source
#     distribution.

if [ -d env ]; then
    echo "--- Virtualenv found"
else
    echo "!!! Setting up virtual environment"
    if [ -x "$(which virtualenv)" ]; then
        virtualenv env > /dev/null
        echo "--- Virtual environment set up"
    else
        echo "!!! Virtualenv not installed"
        exit
    fi
fi

echo "--- Installing venv dependencies"
env/bin/pip install -r requirements.txt > /dev/null

echo "--- Searching for ideal Python 2 interpreter"
if [ -x "$(which python)" ]; then
    PYTHON=python
    echo "!!! Python found"
elif [ -x "$(which python2)" ]; then
    PYTHON=python2
    echo "!!! Python2 found"
else
    echo "!!! Compatible Python interpreter not found. Exiting"
    exit
fi

echo "--- Python interpreter is $PYTHON"

$PYTHON $MAIN $1

